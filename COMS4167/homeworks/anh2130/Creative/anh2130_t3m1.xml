<scene>
  <simtype type="rigid-body"/>
  <description text="A box and two springs."/>
  <duration time="100.0"/>
  <maxsimfreq max="5000.0"/>
  <viewport cx="2.5" cy="1.0" size="25.0"/>

  <rigidbodyintegrator type="explicit-euler" dt="0.16"/>

  <!-- 00-03: Single rigid body -->
  <rigidbodyvertex x="4" y="-1.2" m="1"/>
  <rigidbodyvertex x="4" y=" 1.2" m="1"/>
  <rigidbodyvertex x="5" y=" 1.2" m="1"/>
  <rigidbodyvertex x="5" y="-1.2" m="1"/>
  <rigidbody p="0" p="1" p="2" p="3" vx="0.0" vy="0.0" omega="0.0" r="0.1"/>

  <!-- 04-09: Walls -->
  <rigidbodyvertex x="-5"  y="-2"   m="100"/>
  <rigidbodyvertex x="6"   y="-2"   m="100"/>
  <rigidbodyvertex x="6"   y="5"    m="100"/>
  <rigidbodyvertex x="6.5" y="5"    m="100"/>
  <rigidbodyvertex x="6.5" y="-2.5" m="100"/>
  <rigidbodyvertex x="-5"  y="-2.5" m="100"/>
  <rigidbody p="4" p="5" p="6" p="7" p="8" p="9" vx="0.0" vy="0.0" omega="0.0" r="0.1"/>

  <!-- Force connecting the pad to wall -->
 <rigidbodyspringforce i="1" pix="-7.5" piy="-2.25" j="0" pjx="-0.5" pjy="0.8"  k="3.0" l0="0.7"/>
 <rigidbodyspringforce i="1" pix="3.5" piy="4.75"   j="0" pjx="0.5"  pjy="-0.8" k="2.0" l0="0.7"/>
</scene>
